{
    "compilerOptions": {
        "module": "commonjs",
        "sourceMap": true,
        "target": "es2015",
        "baseUrl": ".",
        "paths": {
            "@src/*": [
                "src/*"
            ]
        },
        "lib": [
            "es2016"
        ],
        "moduleResolution": "node",
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": true,
        "rootDir": ".",
        "outDir": "./dist",
        "typeRoots": [
            "./node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/**/*.ts",
        "test/**/*.ts"
    ]
}
