{
  "name": "joist.fb",
  "version": "0.0.1",
  "description": "Fork for ninjafire as a fun hobby project",
  "contributors": [
    "Gordon Johnston <gord@lineup.ninja>"
  ],
  "repository": "https://github.com/lineupninja/ninjafire",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "src",
    "dist"
  ],
  "dependencies": {
    "debug": "^3.1.0",
    "lodash": "^4.17.10",
    "postinstall-build": "^5.0.1",
    "reflect-metadata": "^0.1.12",
    "uuid": "^3.1.0"
  },
  "devDependencies": {
    "@types/debug": "^0.0.30",
    "@types/dotenv": "^4.0.3",
    "@types/jest": "^22.2.3",
    "@types/lodash": "^4.14.108",
    "@types/node": "^9.6.6",
    "@types/uuid": "^3.4.3",
    "dotenv": "^5.0.1",
    "firebase": "^4.13.1",
    "firebase-admin": "^5.1.0",
    "firemock": "^0.15.15",
    "jest": "^22.4.3",
    "nyc": "^11.1.0",
    "ts-jest": "^22.4.5",
    "tslint": "^5.5.0",
    "tslint-microsoft-contrib": "^5.0.1",
    "typescript": "^2.8.3"
  },
  "scripts": {
    "test": "jest",
    "test-one": "env 'DEBUG=joist:*' jest",
    "debug": "node --inspect-brk node_modules/.bin/jest tsconfig-paths/register 'test/**/*.ts'",
    "build": "tsc",
    "main": "dist/index.js",
    "types": "dist/types/index.d.ts",
    "prepublishOnly": "tsc -p src",
    "postinstall": "postinstall-build dist"
  },
  "jest": {
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "testMatch": [
      "<rootDir>/test/**/*-spec.ts"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "moduleNameMapper": {
      "^@src/(.*)": "<rootDir>/src/$1"
    }
  }
}
